{
  "name": "rainbowkit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "dev": "yarn --recursive --parallel --filter @rainbow-me/rainbowkit* --filter example dev",
    "dev:lib": "yarn --filter @rainbow-me/rainbowkit* dev",
    "dev:example": "yarn dev:lib & yarn --filter example dev",
    "dev:site": "yarn dev:lib & yarn --filter site dev",
    "dev:cli": "yarn --filter @rainbow-me/create-rainbowkit dev",
    "dev:template:next-app": "yarn --filter rainbowkit-next-app dev",
    "build": "yarn --recursive --parallel --filter=!rainbowkit-next-app --filter=!generated-test-app build",
    "start": "yarn dev",
    "lint": "eslint . --ext=js,jsx,mjs,ts,cjs,tsx && yarn format:check && yarn --recursive typecheck",
    "lint:fix": "eslint . --ext=js,jsx,mjs,ts,cjs,tsx --fix && yarn format:fix",
    "format:check": "prettier --check \"./**/*.{ts,js,jsx,mjs,cjs,md,mdx,tsx}\"",
    "format:fix": "prettier --write \"./**/*.{ts,js,jsx,mjs,cjs,md,mdx,tsx}\"",
    "link:cli": "cd packages/create-rainbowkit && yarn link --global",
    "test": "yarn test:unit",
    "test:unit": "vitest",
    "test:update": "vitest --update",
    "test:watch": "vitest --watch",
    "test:cli": "yarn --filter @rainbow-me/create-rainbowkit test:build",
    "test:cli:dev": "yarn --filter @rainbow-me/create-rainbowkit test:dev",
    "test:cli:clean": "rm -rf ./packages/create-rainbowkit/generated-test-app",
    "changeset": "changeset",
    "clean": "rm -rf ./packages/rainbowkit/dist && rm -rf ./packages/rainbowkit-siwe-next-auth/dist && rm -rf ./packages/rainbowkit/node_modules && rm -rf ./packages/create-rainbowkit/dist && yarn install",
    "clean:untracked": "git clean -fxd && yarn install",
    "release": "yarn release:verify-git && yarn release:build && changeset publish",
    "release:verify-git": "git diff --exit-code && git rev-parse --abbrev-ref HEAD | grep \"main\"",
    "release:build": "yarn clean && yarn lint && yarn test && MINIFY_CSS=true yarn --recursive --parallel --filter \"!*-app\" build && cp README.md packages/rainbowkit/README.md",
    "release:test": "yarn release:build && yarn --filter example dev",
    "ci:example": "yarn --filter @rainbow-me/rainbowkit* prepare && yarn --filter example build",
    "ci:site": "yarn --filter @rainbow-me/rainbowkit* prepare && yarn --filter site build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbow-me/rainbowkit.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@changesets/cli": "2.18.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@rushstack/eslint-patch": "^1.1.0",
    "@tanstack/query-core": "^4.3.8",
    "@tanstack/react-query": "^4.3.9",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.16.12",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@vanilla-extract/esbuild-plugin": "^2.2.0",
    "@vanilla-extract/vite-plugin": "^3.8.2",
    "@wagmi/core": "~1.3.9",
    "autoprefixer": "^10.4.0",
    "esbuild": "^0.14.39",
    "esbuild-plugin-replace": "^1.4.0",
    "eslint": "7.32.0",
    "eslint-config-rainbow": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "ethers": "^5.6.8",
    "eventemitter3": "^4.0.7",
    "husky": "^7.0.4",
    "jsdom": "^22.1.0",
    "lokijs": "^1.5.12",
    "next": "^13.4.19",
    "next-auth": "4.22.3",
    "postcss": "^8.4.6",
    "postcss-prefix-selector": "^1.15.0",
    "prettier": "^2.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recursive-readdir-files": "^2.0.7",
    "typescript": "^5.0.4",
    "viem": "~1.6.7",
    "vitest": "^0.32.4",
    "wagmi": "~1.3.10"
  },
  "packageManager": "yarn@3.6.3"
}
